{
    "name": "IG Mutual Checker",
    "description": "Sorts through your following and followers list on Instagram",
    "version": "0.0.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "/dist/index.html",
        "default_icon": "/images/icon.png"
    },
    "icons": {
        "16": "/images/icon.png",
        "48": "/images/icon.png",
        "128": "/images/icon.png"
    },
    "permissions": [
        "scripting",
        "identity"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.instagram.com/*"
            ],
            "js": [
                "/dist/drive.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}